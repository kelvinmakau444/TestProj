<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:masccio="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context="com.makau.kelvin.idscantask.ResultsActivity">
<View
    android:background="#ab000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

    <LinearLayout
    android:padding="5dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:visibility="visible"
                app:cardBackgroundColor="#b3ffffff"
                app:cardCornerRadius="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <it.subito.masaccio.MasaccioImageView
                    android:id="@+id/msaico"
                    app:activate_matrix="ifNoFace"
                    app:center_face="true"
                    app:translate_y="0.28"
                    app:translate_x="0.07"
                    app:activate_face_detection="squareImage"
                    android:scaleType="fitXY"
                    app:scale="2"
                    android:layout_width="107dp"
                    android:layout_height="107dp" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView

                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                app:cardBackgroundColor="#b3ffffff"
                app:cardCornerRadius="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />
            </android.support.v7.widget.CardView>

        </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#c5ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:text="Serial No:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:fontFamily="sans-serif"
                        android:id="@+id/serial_no"
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="#000"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:text="Country code:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:fontFamily="sans-serif"
                        android:id="@+id/country_code"
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="#000"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:text="Full Names:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:fontFamily="sans-serif"
                        android:id="@+id/fullnames"
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="#000"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:text="Date of Birth (YYMMDD) :"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:fontFamily="sans-serif"
                        android:id="@+id/dob"
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="#000"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:text="Sex:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:fontFamily="sans-serif"
                        android:id="@+id/sex"
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="#000"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:text="Id No:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:fontFamily="sans-serif"
                        android:id="@+id/id_no"
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="#000"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:text="Country:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:fontFamily="sans-serif"
                        android:id="@+id/country"
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="#000"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:text="Date of issue (YYMMDD) :"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:fontFamily="sans-serif"
                        android:id="@+id/doi"
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="#000"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"/>
                <LinearLayout
                    android:layout_marginBottom="2dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#139303"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:fontFamily="sans-serif"
                        android:id="@+id/mrz"
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                
                <View
                    android:background="#000"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"/>
            </LinearLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>

</LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/saveBtn"
        app:rippleColor="#ffffff"
        android:onClick="saveToDB"
        android:src="@drawable/ic_save"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|end"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</android.support.design.widget.CoordinatorLayout>
